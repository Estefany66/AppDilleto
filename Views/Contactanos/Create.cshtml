@model Contactanos
@{
    ViewData["Title"] = "Home Page";
}
<div class="card text-center" >
  <div class="card-header" >
  </div>
  <div class="card-body" style="background: #FADBD8 ;">
    <h5 class="card-title"><h2 style="-webkit-text-stroke: 2px  black;color: #FDFEFE; text-align: center;  font-size: 50px;"> Contactanos  </h2></h5>

    <p class="card-text">
    </p>
  </div>
  <div class="card-footer text-muted">
  </div>
</div>

<div class="row" >
  <div class="col-md-6">
<form asp-controller="Contactanos" asp-action="Create">

     <div class="input-group flex-nowrap" style="text-align: left;">
                <label asp-for="Nombre" class="control-label" style="width: 15%;" ></label>
                <input asp-for="Nombre" class="form-control" />
            </div>    

            <div class="input-group flex-nowrap" style="text-align: left;">
                <label asp-for="Apellidos" class="control-label" style="width: 15%;" ></label>
                <input asp-for="Apellidos" class="form-control" />
            </div>               
                   
            <div class="input-group flex-nowrap" style="text-align: left;">
                <label asp-for="Celular" class="control-label" style="width: 15%;" ></label>
                <input asp-for="Celular" class="form-control" />
            </div>  

            <div class="input-group flex-nowrap" style="text-align: left;">
                <label asp-for="Email" class="control-label" style="width: 15%;" ></label>
                <input asp-for="Email" class="form-control" />
            </div>  

            <div  class="input-group flex-nowrap"  style="text-align: left;" >
                <label asp-for="Mensaje" class="control-label" style="width: 15%;" ></label>
                <textarea asp-for="Mensaje"  class="form-control "></textarea>
            </div>   
                   

            <div class="form-group"  >
                 <button type="submit" class="btn btn-light"  style="background: #F7819F; color:#FFFFFF;width: 30%;">Enviar</button> 
            </div>                

</form>
<h1>@ViewData["Message"]</h1>
  </div>
