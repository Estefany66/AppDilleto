@model IEnumerable<AppDilleto.Models.Contactanos>

@{
    ViewData["Title"] = "Home Page";
}
   <div class="card text-center" >
  <div class="card-header" >
  </div>
  <div class="card-body" style="background: #FADBD8 ;">
    <h5 class="card-title"><h2 style="-webkit-text-stroke: 2px  black;color: #FDFEFE; text-align: center;  font-size: 50px;">Contactanos </h2></h5>
    <p class="card-text">
    </p>
  </div>
  <div class="card-footer text-muted">
  </div>
</div>
  

<table class="table table-hover" style="margin-top: 3%;">
     <thead  style="background: #F7819F; color:#FFFFFF">
        <tr >

               
                <th scope="col" >
                   @Html.DisplayNameFor(model => model.Id)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                    <th scope="col">
                    @Html.DisplayNameFor(model => model.Apellidos)
                </th>
                    <th scope="col">
                    @Html.DisplayNameFor(model => model.Celular)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Mensaje)
                </th>
                    
                   <th scope="col">
                    
                </th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">
                    @Html.DisplayFor(model => item.Id)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>

                  <th scope="col">
                    @Html.DisplayFor(model => item.Apellidos)
                </th>
                    <th scope="col">
                    @Html.DisplayFor(model => item.Celular)
                </th>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mensaje)
                </td>

                <td>
               
                <a asp-action="Delete" class="btn btn-light"  style="background: #F7819F; color:#FFFFFF"  asp-route-id="@item.Id">Borrar</a>
                

            </td>
            </tr>

             
        }
    </tbody>
    
</table>
<div style="margin-top: 5%; text-align: center;">
<p>
    <a class="btn btn-light"  style="background: #F7819F; color:#FFFFFF" asp-action="Create" >Crear nuevo Contacto</a>
</p>
</div>

<h1>@ViewData["Message"]</h1>
